apiVersion: v1
kind: PersistentVolume
metadata:
  name: data
  labels:
    release: "stable"
spec:
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  storageClassName: mynfs
  persistentVolumeReclaimPolicy: Recycle
  nfs:
    path: "/nfs/data/mysql-multiple/mysql-multiple-data-0"
    server: 172.16.124.130
